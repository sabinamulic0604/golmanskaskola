@model GolSkola.Models.Golmani

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Golmani</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Godiste" class="control-label"></label>
                <input asp-for="Godiste" class="form-control" />
                <span asp-validation-for="Godiste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Klub" class="control-label"></label>
                <input asp-for="Klub" class="form-control" />
                <span asp-validation-for="Klub" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Profilna" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Profilna" class="custom-file-input" id="FLProfilna"
                    onchange="document.getElementById('ProfilnaPrv').src=window.URL.createObjectURL(this.files[0])" />
                    <label class="custom-file-label" for="FLProfilna">Odaberi sliku</label>
                </div>
                <span asp-validation-for="Profilna" class="text-danger"></span>
                <img id="ProfilnaPrv" src="" alt="slika" width="150"
                     height="150" style="border:1px; margin-top:20px; margin-left:120px;" />

            </div>

           <div class="form-group">
                <label asp-for="Vidljivost" class="control-label"></label>
                <select asp-for="Vidljivost"  class="form-control">
                    <option value="0" selected>Da li želite objaviti igrača na websajtu?</option>
                    <option value="1"> DA </option>
                    <option value="2"> NE </option>
                </select>
                <span asp-validation-for="Vidljivost" class="text-danger" asp-value=""></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
    $(".custom-file-input").on("change",function()){
        var fileName=$(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

    });
    </script>
}
